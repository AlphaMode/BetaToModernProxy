<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="SysOut" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%style{[%d{HH:mm:ss}]}{yellow} %highlight{[%logger{1}/%level]}{FATAL=red, ERROR=red, WARN=yellow, INFO=green, DEBUG=green, TRACE=blue} %highlight{%msg{nolookups}%n}{FATAL=red, ERROR=red, WARN=normal, INFO=normal, DEBUG=normal, TRACE=normal}"
                    disableAnsi="false"/>
        </Console>

        <RollingRandomAccessFile name="LatestFile" fileName="${sys:user.dir}/logs/latest.log"
                                 filePattern="${sys:user.dir}/logs/%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="(%logger{1}) %msg{nolookups}%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <OnStartupTriggeringPolicy/>
            </Policies>
        </RollingRandomAccessFile>
    </Appenders>

    <Loggers>
        <Root level="all">
            <AppenderRef ref="SysOut" level="info"/>
            <AppenderRef ref="LatestFile" level="info"/>
        </Root>
    </Loggers>
</Configuration>
